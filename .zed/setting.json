{
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "exec",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on"
    },
